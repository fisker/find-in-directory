{
  "name": "find-in-directory",
  "version": "2.0.1",
  "description": "Find file or directory by names in a directory.",
  "homepage": "https://github.com/fisker/find-in-directory#readme",
  "bugs": {
    "url": "https://github.com/fisker/find-in-directory/issues"
  },
  "repository": "fisker/find-in-directory",
  "funding": "https://github.com/fisker/find-in-directory?sponsor=1",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "type": "module",
  "exports": "./index.js",
  "main": "index.js",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "run-p clean \"build:*\"",
    "build:types": "tsc --emitDeclarationOnly --noEmit false",
    "clean": "run-p \"clean:*\"",
    "clean:dist": "del-cli dist",
    "dist": "run-p \"dist:*\"",
    "dist:npm": "release-it",
    "lint": "run-p --continue-on-error \"lint:*\"",
    "lint:eslint": "eslint .",
    "lint:markdown": "markdownlint-cli2",
    "lint:package-json": "yarn run fix:package-json --check",
    "lint:prettier": "prettier . --check",
    "prepare": "husky install",
    "test": "run-p \"test:*\"",
    "test:js": "node --test test.js",
    "test:types": "yarn build && tsd",
    "test-coverage": "c8 yarn test",
    "release": "run-s fix test dist",
    "fix": "run-p --continue-on-error \"fix:*\"",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:markdown": "yarn lint:markdown --fix",
    "fix:prettier": "prettier . --write",
    "fix:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\""
  },
  "c8": {
    "include": [
      "index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "url-or-path": "2.6.1"
  },
  "devDependencies": {
    "@fisker/eslint-config": "14.0.0",
    "@fisker/lint-staged-config": "3.3.5",
    "@fisker/markdownlint-cli2-config": "0.0.3",
    "@fisker/prettier-config": "5.1.5",
    "@types/node": "22.15.3",
    "c8": "10.1.3",
    "del-cli": "6.0.0",
    "eslint": "9.25.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "markdownlint-cli2": "0.17.2",
    "npm-run-all2": "7.0.2",
    "prettier": "3.5.3",
    "release-it": "19.0.1",
    "sort-package-json": "3.0.0",
    "tsd": "0.32.0",
    "typescript": "5.8.3"
  },
  "packageManager": "yarn@4.9.1",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
